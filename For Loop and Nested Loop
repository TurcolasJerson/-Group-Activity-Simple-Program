‎4.
‎
‎#include <iostream>
‎using namespace std;
‎
‎int main() {
‎    char ch;
‎
‎    for (int i = 0; i < 5; i++) {
‎        cout << "Enter a character: ";
‎        cin >> ch;
‎
‎        if (ch == 'n' || ch == 'N') { // Checking both lowercase and uppercase 'N'
‎            cout << "Exiting loop..." << endl;
‎            break; 
‎        }
‎    }
‎
‎    return 0;
‎}
‎
‎
‎
‎5.
‎
‎#include <iostream>
‎using namespace std;
‎
‎int main() {
‎    for (int i = 0; i <= 5; i++) {
‎        cout << "Multiplication Table of " << i << ":\n";
‎        for (int j = 1; j <= 10; j++) {
‎            cout << i << " x " << j << " = " << (i * j) << endl;
‎        }
‎        cout << endl; // Adds space between tables
‎    }
‎
‎    return 0;
‎}
